[
    {
        "key": "alt+a",
        "command": "cursorLeft",
        "when": "textInputFocus"
    },
    {
        "key": "alt+W",
        "command": "cursorUp",
        "when": "textInputFocus"
    },
    {
        "key": "alt+d",
        "command": "cursorRight",
        "when": "textInputFocus"
    },
    {
        "key": "alt+s",
        "command": "cursorDown",
        "when": "textInputFocus"
    },


    {
        "key": "alt+shift+a",
        "command": "cursorLeftSelect",
        "when": "textInputFocus"
    },
    {
        "key": "alt+shift+w",
        "command": "cursorUpSelect",
        "when": "textInputFocus"
    },
    {
        "key": "alt+shift+d",
        "command": "cursorRightSelect",
        "when": "textInputFocus"
    },
    {
        "key": "alt+shift+s",
        "command": "cursorDownSelect",
        "when": "textInputFocus"
    },

    {
        "key": "alt+ctrl+a",
        "command": "cursorWordLeft",
        "when": "textInputFocus"
    },
    {
        "key": "alt+ctrl+d",
        "command": "cursorWordRight",
        "when": "textInputFocus"
    },
    
    {
        "key": "alt+ctrl+shift+a",
        "command": "cursorWordLeftSelect",
        "when": "textInputFocus"
    },
    {
        "key": "alt+ctrl+shift+d",
        "command": "cursorWordRightSelect",
        "when": "textInputFocus"
    },

    {
        "key": "ctrl+d",
        "command": "editor.action.duplicateSelection",
        "when": "textInputFocus"
    },

    {
        "key": "shift+enter",
        "command": "editor.action.insertLineAfter",
        "when": "editorTextFocus"
    },

    {
        "key": "ctrl+enter",
        "command": "editor.action.insertLineBefore",
        "when": "editorTextFocus"
    }
